                        app:layout_constraintStart_toEndOf="@+id/textView105"
                        app:layout_constraintTop_toTopOf="@+id/textView105" />

                    <TextView
                        android:id="@+id/textView105"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/roboto"
                        android:text="20s ago by"
                        android:textColor="@color/md_grey_600"
                        android:textSize="@dimen/font_body_size"
                        app:layout_constraintStart_toEndOf="@+id/imageView63"
                        app:layout_constraintTop_toTopOf="@+id/imageView63" />

                    <TextView
                        android:id="@+id/priceTextView"
                        android:layout_width="wrap_content"
