<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/space_4"
    android:layout_marginStart="@dimen/space_4"
    android:layout_marginTop="@dimen/space_4"
    android:background="@color/md_white_1000">


    <TextView
        android:id="@+id/likeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto"
        android:text="3 Likes"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextDisabled"
        android:textSize="@dimen/font_body_s_size"
        app:layout_constraintBottom_toBottomOf="@+id/likeImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/likeImageView" />

    <TextView
        android:id="@+id/shareTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto"
        android:text="Share"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextDisabled"
        android:textSize="@dimen/font_body_s_size"
        app:layout_constraintBottom_toBottomOf="@+id/shareImageView"
        app:layout_constraintStart_toEndOf="@+id/shareImageView"
        app:layout_constraintTop_toTopOf="@+id/shareImageView" />

    <TextView
        android:id="@+id/saveTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto"
        android:text="Save"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextDisabled"
        android:textSize="@dimen/font_body_s_size"
        app:layout_constraintBottom_toBottomOf="@+id/saveImageView"
        app:layout_constraintStart_toEndOf="@+id/saveImageView"
        app:layout_constraintTop_toTopOf="@+id/saveImageView" />

    <ImageView
        android:id="@+id/placeImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/space_2"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/baseline_image_black_24" />

    <TextView
        android:id="@+id/placeNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="Coco's Cafe"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/font_title_size"
        app:layout_constraintStart_toEndOf="@+id/placeImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/regionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto"
        android:text="West University . Cafe"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextDisabled"
        android:textSize="@dimen/font_body_s_size"
        app:layout_constraintStart_toEndOf="@+id/placeImageView"
        app:layout_constraintTop_toBottomOf="@+id/placeNameTextView" />

    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="Egg in a blanket is the BOMB!"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/font_body_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/placeImageView"
        app:layout_constraintTop_toBottomOf="@+id/regionTextView" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="Sep 15 2007"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextDisabled"
        android:textSize="@dimen/font_body_s_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/saveImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/space_16"
        android:layout_marginTop="12dp"
        android:tint="@color/md_grey_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/commentTextView"
        app:layout_constraintTop_toBottomOf="@+id/commentTextView"
        app:srcCompat="@drawable/baseline_bookmark_border_black_24" />

    <ImageView
        android:id="@+id/shareImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/space_16"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:tint="@color/md_grey_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/saveTextView"
        app:layout_constraintTop_toBottomOf="@+id/commentTextView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_share_alt_box_black_24" />

    <ImageView
        android:id="@+id/likeImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/space_16"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:tint="@color/md_grey_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/likeTextView"
        app:layout_constraintTop_toBottomOf="@+id/commentTextView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_heart" />

</androidx.constraintlayout.widget.ConstraintLayout>