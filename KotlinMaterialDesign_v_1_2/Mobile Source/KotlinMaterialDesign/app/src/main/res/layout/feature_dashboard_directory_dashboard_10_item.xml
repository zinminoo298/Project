<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">


    <ImageView
        android:id="@+id/catbackgroundImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorAccentLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/baseline_image_black_24" />

    <ImageView
        android:id="@+id/catImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:tint="@color/md_white_1000"
        app:layout_constraintBottom_toBottomOf="@+id/catbackgroundImageView"
        app:layout_constraintEnd_toEndOf="@+id/catbackgroundImageView"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/catbackgroundImageView"
        app:layout_constraintTop_toTopOf="@+id/catbackgroundImageView"
        app:srcCompat="@drawable/baseline_image_black_24" />

    <TextView
        android:id="@+id/catNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto"
        android:text="ATMs"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/font_body_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catbackgroundImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>