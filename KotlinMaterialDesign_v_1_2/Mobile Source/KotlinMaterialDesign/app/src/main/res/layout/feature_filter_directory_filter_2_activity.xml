            <TextView
                android:id="@+id/textView31"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto"
                android:text="Filter By"
                android:textAlignment="viewStart"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/font_body_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView34"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView31">

                <Button
                    android:id="@+id/filterBy1Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_2"
                    android:layout_weight="1"
                    android:background="@color/md_white_1000"
                    android:fontFamily="@font/roboto"
                    android:text="5$"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_body_size" />

                <Button
                    android:id="@+id/filterBy2Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_2"
                    android:layout_weight="1"
                    android:background="@color/md_white_1000"
                    android:fontFamily="@font/roboto"
                    android:text="10$"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_body_size" />

                <Button
                    android:id="@+id/filterBy3Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_2"
                    android:layout_weight="1"
                    android:background="@color/md_white_1000"
                    android:fontFamily="@font/roboto"
                    android:text="100$"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_body_size" />

                <Button
                    android:id="@+id/filterBy4Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/space_2"
                    android:background="@color/md_white_1000"
                    android:fontFamily="@font/roboto"
                    android:text="1000$"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_body_size" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <Button
                    android:id="@+id/openNowButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_2"
                    android:layout_weight="1"
                    android:background="@color/md_white_1000"
                    android:fontFamily="@font/roboto"
                    android:text="Open Now"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_body_size" />

                <Button
                    android:id="@+id/openAtButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/md_white_1000"
                    android:fontFamily="@font/roboto"
                    android:text="Open at..."
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_body_size" />


            </LinearLayout>

            <ImageView
