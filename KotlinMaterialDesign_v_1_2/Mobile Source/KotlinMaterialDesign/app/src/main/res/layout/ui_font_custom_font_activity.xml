<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#FF8842A3"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Font Name : Roboto"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_title_size"
                    android:textStyle="bold"
                    tools:textColor="@color/colorTextLight" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/robotoFontTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="@dimen/space_8"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, Morbi ut vestibulum orci.Donec luctus pharetra tempor.Phasellus consequat risus augue, eu mattis sapien tristique quis.Suspendisse id mauris bibendum, suscipit est nec, tempus leo.Sed ut viverra mauris, a ullamcorper leo.Etiam vitae tristique est.Aenean orci justo,luctus condimentum pellentesque in, vulputate a nunc." />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginTop="@dimen/space_16"
                android:layout_marginEnd="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Font Name : Space mono"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_title_size"
                    android:textStyle="bold"
                    tools:textColor="@color/colorTextLight" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/spaceMonoFontTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/spacemono_regular"
                    android:paddingStart="@dimen/space_8"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, Morbi ut vestibulum orci.Donec luctus pharetra tempor.Phasellus consequat risus augue, eu mattis sapien tristique quis.Suspendisse id mauris bibendum, suscipit est nec, tempus leo.Sed ut viverra mauris, a ullamcorper leo.Etiam vitae tristique est.Aenean orci justo,luctus condimentum pellentesque in, vulputate a nunc." />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginTop="@dimen/space_16"
                android:layout_marginEnd="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Font Name : Inkunt Antiqua"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_title_size"
                    android:textStyle="bold"
                    tools:textColor="@color/colorTextLight" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/inknutAntiquaFontTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/inknutantiqua_regular"
                    android:paddingStart="@dimen/space_8"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, Morbi ut vestibulum orci.Donec luctus pharetra tempor.Phasellus consequat risus augue, eu mattis sapien tristique quis.Suspendisse id mauris bibendum, suscipit est nec, tempus leo.Sed ut viverra mauris, a ullamcorper leo.Etiam vitae tristique est.Aenean orci justo,luctus condimentum pellentesque in, vulputate a nunc." />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginTop="@dimen/space_16"
                android:layout_marginEnd="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Font Name : Dancing Script"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/font_title_size"
                    android:textStyle="bold"
                    tools:textColor="@color/colorTextLight" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/dancingScriptFontTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/dancingscript_regular"
                    android:paddingStart="@dimen/space_8"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, Morbi ut vestibulum orci.Donec luctus pharetra tempor.Phasellus consequat risus augue, eu mattis sapien tristique quis.Suspendisse id mauris bibendum, suscipit est nec, tempus leo.Sed ut viverra mauris, a ullamcorper leo.Etiam vitae tristique est.Aenean orci justo,luctus condimentum pellentesque in, vulputate a nunc."
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
