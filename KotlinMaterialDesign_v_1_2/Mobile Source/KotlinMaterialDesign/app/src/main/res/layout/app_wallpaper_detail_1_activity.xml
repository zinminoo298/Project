<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.application.wallpaper.list.AppWallpaperList4Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/wallpaperImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="-1dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/baseline_image_black_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/space_2"
            android:layout_marginBottom="@dimen/space_2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_8"
                android:clickable="true"
                android:tint="@color/md_grey_700"
                app:backgroundTint="@color/colorLine"
                app:fabSize="mini"
                app:rippleColor="@color/colorFabRipple"
                app:srcCompat="@drawable/baseline_phone" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_8"
                android:clickable="true"
                android:tint="@color/md_grey_700"
                app:backgroundTint="@color/colorLine"
                app:fabSize="mini"
                app:rippleColor="@color/colorFabRipple"
                app:srcCompat="@drawable/baseline_download" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_8"
                android:clickable="true"
                android:tint="@color/md_grey_700"
                app:backgroundTint="@color/colorLine"
                app:fabSize="mini"
                app:rippleColor="@color/colorFabRipple"
                app:srcCompat="@drawable/baseline_share_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_8"
                android:clickable="true"
                android:tint="@color/md_grey_700"
                app:backgroundTint="@color/colorLine"
                app:fabSize="mini"
                app:rippleColor="@color/colorFabRipple"
                app:srcCompat="@drawable/baseline_heart_white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/space_8"
                android:clickable="true"
                android:src="@drawable/baseline_control_camera_white_24"
                app:fabSize="normal" />


        </LinearLayout>

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_custom_circle_back_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>